<div class="container">
    <div class="row">
        <div class="form">
            <form method="POST" action="/notification/sendComplaint">

                <select class="selectpicker" data-style="btn-info" name="selectpicker">
                    <optgroup label="Select Table">
                        <option name="" value="0">Select table</option>
                        <option name="table1" value="1">Table 1</option>
                        <option name="table2" value="2">Table 2</option>
                        <option name="table3" value="3">Table 3</option>
                    </optgroup>
                </select>

                <div class="form-group">
                    <label for="title"><strong>Subject</strong>(Brief description about problem)</label>
                    <input type="text" class="form-control" id="sub" name="title">
                </div>
                <div class="form-group">
                    <div><label for="body"><strong>Details</strong>(Full explanation regarding problem)</label></div>
                    <!-- <textarea name="det" id="details" cols="146" rows="10"></textarea> -->
                    <input type="text" class="form-control" id="details" name="body">
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
